&НаКлиенте
Процедура СинхронизироватьДерево(ПараметрыСинхронизации, ЭлементыДерева, Данные)
	Индекс = 0;
	Пока Индекс < Данные.Количество() Цикл    
		ЭлементДанных = Данные[Индекс];
		
		Если Индекс >= ЭлементыДерева.Количество() Тогда
			ЭлементДерева = ЭлементыДерева.Добавить();
			ЗаполнитьЭлементДерева(ПараметрыСинхронизации, ЭлементДерева, ЭлементДанных);
			Индекс = Индекс + 1;
			Продолжить;
		КонецЕсли; 
		
		ЭлементДерева = ЭлементыДерева[Индекс];     
		
		ЗаполнитьЭлементДерева(ПараметрыСинхронизации, ЭлементДерева, ЭлементДанных);
		Индекс = Индекс + 1;
	КонецЦикла;
	
	Пока Индекс < ЭлементыДерева.Количество() Цикл    
		ЭлементДерева = ЭлементыДерева[Индекс];
		ЭлементыДерева.Удалить(ЭлементДерева);
	КонецЦикла;
