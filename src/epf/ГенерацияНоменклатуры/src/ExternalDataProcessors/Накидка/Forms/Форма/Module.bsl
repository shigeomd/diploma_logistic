		МассивИменРеквизитов.Добавить(СтрокаДерева.Имя);
		СоответствиеСтрок.Вставить(СтрокаДерева.Имя, СтрокаДерева);
	КонецЦикла;
	
	Если МассивИменРеквизитов.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Настройки = РаботаСИИ().ПолучитьНастройки();
