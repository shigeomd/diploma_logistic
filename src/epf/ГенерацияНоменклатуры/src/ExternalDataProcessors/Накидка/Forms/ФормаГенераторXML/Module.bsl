	СписокЗначений.СортироватьПоЗначению();
	
	Результат = Новый Массив;
	Для Каждого ЭлементСписка Из СписокЗначений Цикл
		ЭлементМассива = МассивЗамен[Число(ЭлементСписка.Представление) - 1];
