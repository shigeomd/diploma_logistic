&НаКлиенте
Функция ПолучитьРеквизитыРасширения(СтрокаОбъект)
	Результат = Новый Соответствие;                      
	
	Если НЕ ВыгружатьВРасширение Тогда
		Возврат Результат;
	КонецЕсли; 
	
	Если НЕ СтрокаОбъект.ЭтоЗаимствованный Тогда
		Возврат Результат;
	КонецЕсли;
	
	Для Каждого СхемаРеквизита Из Параметры.СхемыФормы.СхемаРеквизиты Цикл
		Если СхемаРеквизита.ЭтоРеквизитФормы Тогда
			Продолжить;
		КонецЕсли;
		
		Если ЭтоСтандартныйРеквизит(СтрокаОбъект.Тип, СхемаРеквизита.Имя) Тогда
			Продолжить;
		КонецЕсли;             
		
		ЭтоТаблицаДерево = ЭтоТаблицаДерево(СхемаРеквизита.ОписаниеТипов);
		ДанныеРеквизита = ПолучитьДанныеРеквизита(СтрокаОбъект, СхемаРеквизита.Имя, ЭтоТаблицаДерево);
		
		Если ДанныеРеквизита.ЭтоЗаимствованный Тогда
			Для Каждого СхемаПодчиненногоРеквизита Из СхемаРеквизита.Подчиненные Цикл
				Если СхемаПодчиненногоРеквизита.ЭтоРеквизитФормы Тогда
					Продолжить;
				КонецЕсли; 
				
				ДанныеПодчиненногоРеквизита = ПолучитьДанныеРеквизита(СтрокаОбъект, СхемаПодчиненногоРеквизита.Имя, Ложь, СхемаРеквизита.Имя);
				
				Если ДанныеПодчиненногоРеквизита.ЭтоЗаимствованный Тогда
					Продолжить;
				КонецЕсли;

				ПолноеИмяРеквизита = СхемаРеквизита.Имя + "." + СхемаПодчиненногоРеквизита.Имя;
				Результат.Вставить(ПолноеИмяРеквизита, ПолноеИмяРеквизита);
			КонецЦикла;
			
			Продолжить;
		КонецЕсли;

		Результат.Вставить(СхемаРеквизита.Имя, СхемаРеквизита.Имя);
	КонецЦикла;	
	
	Возврат Результат;
КонецФункции

&НаКлиенте
Функция ОткрытьФайлКонфигурации(ИмяФайла, ДляЗаписи) 
	Результат = Неопределено;
	Если мФайлыКонфигурацииВРаботе <> Неопределено Тогда
		Результат = мФайлыКонфигурацииВРаботе.Получить(ИмяФайла);
	КонецЕсли;
	
	
	Если Результат <> Неопределено Тогда
		Результат.ДляЗаписи = Результат.ДляЗаписи ИЛИ ДляЗаписи;
		Возврат Результат.ДокументDOM;
	КонецЕсли;
	
	ФайлСуществует = СлужебныеФункции().ФайлСуществует(ИмяФайла);
	
	Результат = Новый Структура("ДокументDOM, ДляЗаписи", Неопределено, ДляЗаписи);
	
	Если ФайлСуществует Тогда
		Результат.ДокументDOM = ПрочитатьФайлКонфигурации(ИмяФайла);
	Иначе
		Если НЕ ДляЗаписи Тогда
			ВызватьИсключение СтрШаблон(НСтр("ru = 'В выгрузке не найден файл: %1'"), ИмяФайла);
		КонецЕсли;
		Результат.ДокументDOM = Новый ДокументDOM;
	КонецЕсли;

	Если мФайлыКонфигурацииВРаботе <> Неопределено Тогда
		мФайлыКонфигурацииВРаботе.Вставить(ИмяФайла, Результат);
	КонецЕсли;
	
	Возврат Результат.ДокументDOM;
КонецФункции

