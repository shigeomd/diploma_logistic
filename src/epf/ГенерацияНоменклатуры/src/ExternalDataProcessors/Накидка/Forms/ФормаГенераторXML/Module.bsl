	ЧтениеXML.УстановитьСтроку(УзелИсточникСтрока);
	
	ПостроительDOM = Новый ПостроительDOM;
	Результат = ПостроительDOM.Прочитать(ЧтениеXML);
	ЧтениеXML.Закрыть();       
	
	Очередь = Новый Массив;
	Очередь.Добавить(Новый Структура("Родитель,Узел", УзелПриемник, Результат.ДочерниеУзлы[0]));
	
	Пока Очередь.Количество() > 0 Цикл
		ЭлементОчереди = Очередь[0];       
		
		Если ЭлементОчереди.Узел.ТипУзла = ТипУзлаDOM.Текст Тогда
			Очередь.Удалить(0);
			Продолжить;
		КонецЕсли; 
		
		ТекстовоеСодержимое = ЭлементОчереди.Узел.ТекстовоеСодержимое;
		Если ЭлементОчереди.Узел.ПервыйДочерний = Неопределено 
			ИЛИ ЭлементОчереди.Узел.ПервыйДочерний.ТипУзла <> ТипУзлаDOM.Текст Тогда
			ТекстовоеСодержимое = Неопределено;
		КонецЕсли;
		
		НовыйУзел = ВыгрузитьДочернийУзел(ДокументDOM, ЭлементОчереди.Родитель, ЭлементОчереди.Узел.ИмяУзла, ТекстовоеСодержимое);
		
		Для Каждого ДочернийУзел Из ЭлементОчереди.Узел.ДочерниеУзлы Цикл
			Очередь.Добавить(Новый Структура("Родитель,Узел", НовыйУзел, ДочернийУзел));
		КонецЦикла; 
		
		
		Очередь.Удалить(0);
	КонецЦикла;
