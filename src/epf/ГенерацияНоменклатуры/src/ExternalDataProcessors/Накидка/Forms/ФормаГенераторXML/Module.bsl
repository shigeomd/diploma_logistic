&НаКлиенте
Функция ПолучитьУзелРеквизитаОбъектаКонфигурации(ДокументDOM, УзелКонтекста, ТекстЗапроса, ИмяРеквизита)
	
	Разыменователь = Новый РазыменовательПространствИменDOM(ДокументDOM);
	Выражение = ДокументDOM.СоздатьВыражениеXPath(ТекстЗапроса, Разыменователь);
	РезультатВычисления = Выражение.Вычислить(УзелКонтекста, ТипРезультатаDOMXPath.НеупорядоченныйИтераторУзлов);
	
	Стоп = Ложь;
	Пока НЕ Стоп Цикл
		Узел = РезультатВычисления.ПолучитьСледующий();
		Если Узел = Неопределено Тогда
			Стоп = Истина;
			Продолжить;
		КонецЕсли;
		
		Если НРег(Узел.ТекстовоеСодержимое) = НРег(ИмяРеквизита) Тогда
			Возврат Узел;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат Неопределено;
	
КонецФункции


// Проверяет существование объекта конфигурации
//
// Параметры:
//  Тип - Строка - тип объекта конфигурации
//  Имя - Строка - имя объекта конфигурации
//
// Возвращаемое значение:
//  Булево - Истина, если объект существует
// Пример:
//   ЕстьКонтрагенты =ЕстьОбъектКонфигурации("Справочник", "Контрагенты");
&НаКлиенте
Функция ЕстьОбъектКонфигурации(Тип, Имя, ЭтоРасширение = Ложь)
	ОписаниеРаздела = ПолучитьРазделМетаданныхПоИмени(Тип);
	ВнутреннийТип = ОписаниеРаздела.ВнутреннееИмя;
	
	ШаблонЗапроса =
		"/*[local-name()='MetaDataObject']/
		|*[local-name()='Configuration']/
		|*[local-name()='ChildObjects']/
		|*[local-name()='%1' and text()='%2']";
	
	ТекстЗапроса = СтрШаблон(ШаблонЗапроса, ВнутреннийТип, Имя);
	
	ДокументКонфигурации = ОткрытьФайлКонфигурации(ПолучитьПутьКФайлуКонфигурации(ЭтоРасширение), Ложь);
	
	Разыменователь = Новый РазыменовательПространствИменDOM(ДокументКонфигурации);
	Выражение = ДокументКонфигурации.СоздатьВыражениеXPath(ТекстЗапроса, Разыменователь);
	Результат = Выражение.Вычислить(ДокументКонфигурации, ТипРезультатаDOMXPath.Булево);
	
	Возврат Результат.БулевоЗначение;
КонецФункции

&НаКлиенте
Функция ПолучитьОбъектКонфигурации(Тип, Имя, ЭтоРасширение)
	Если НЕ ЕстьОбъектКонфигурации(Тип, Имя, ЭтоРасширение) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Результат = Новый Структура;
	
	ИмяФайла = ПолучитьПутьКФайлуОбъекта(Тип, Имя, ЭтоРасширение);
	ДокументDOM = ОткрытьФайлКонфигурации(ИмяФайла, Ложь);
	УзелMetaDataObject = ДокументDOM.ПервыйДочерний;
	УзелОбъекта = УзелMetaDataObject.ПервыйДочерний;
	
	ЭтоЗаимствованный = Ложь;   
	Если ЭтоРасширение Тогда
		УзелProperties = УзелОбъекта.ПолучитьЭлементыПоИмени("Properties")[0];
		УзлыObjectBelonging = УзелProperties.ПолучитьЭлементыПоИмени("ObjectBelonging");
		Если УзлыObjectBelonging.Количество() > 0 Тогда
			УзелObjectBelonging = УзлыObjectBelonging[0];
			ЭтоЗаимствованный = (УзелObjectBelonging.ТекстовоеСодержимое  = "Adopted");
		КонецЕсли;
	КонецЕсли;
	
	Результат.Вставить("УИД", УзелОбъекта.ПолучитьАтрибут("uuid"));
	Результат.Вставить("ЭтоЗаимствованный", ЭтоЗаимствованный);
	
	Возврат Результат;
КонецФункции

